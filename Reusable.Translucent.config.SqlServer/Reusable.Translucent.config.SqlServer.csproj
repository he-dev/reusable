    <ProjectReference Include="..\Reusable.Translucent.config\Reusable.Translucent.config.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="src\SqlCommandFactory.cs" />
    <Compile Remove="src\Controllers\SqlServerController - Copy.cs" />
    <Compile Remove="src\SqlServerColumn.cs" />
    <Compile Remove="src\SqlServerColumnExtensions.cs" />
  </ItemGroup>

