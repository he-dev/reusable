    <Reference Include="System.ComponentModel.DataAnnotations" />
    <Reference Include="System.Configuration" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="src\SettingRequestFactory.cs" />
    <Compile Remove="src\SettingMetadata.cs" />
    <Compile Remove="src\SettingIdentifier.cs" />
    <Compile Remove="src\SettingNameParser.cs" />
    <Compile Remove="src\Annotations.cs" />
